<h1> Here is your question </h1>

<div class='post-container'>
  <article id="<%= @post.id %>">
      <a href='/posts/<%= @post.id %>/vote' class="fa fa-sort-desc vote-button"></a>
      <span class='points'><%= @post.points %></span>
       <a href='/posts/<%= @post.id %>/downvote' class="fa fa-sort-asc vote-down"></a>
      <h2><a href='/posts/<%= @post.id %>'><%= @post.title %></a></h2>
      <p>
        <span class='username'><%= @post.author %></span>
        <span class='timestamp'><%= @post.comment_count %></span>
        <span class='timestamp'><%= @post.time_since_creation %></span>
        <% if session[:user_id] %>
          <form action="/posts/<%= @post.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input class="btn" type="submit" value="delete">
          </form>
         <% end %>
      </p>
    </article>
</div>

<div class='post-content'>
  <p><%=@post.content%></p>
</div>

<!-- parminder's work -->
<div class='answers'>
  <p>"THESE ARE ANSWERS"</p>
    <% @post.answers.each do |answer| %>
      <a href='/posts/<%= @post.id %>/answers/<%=@post.%>/vote' class="fa fa-sort-desc vote-button"></a>
      <span class='points'><%= @answer.points %></span>
      <a href='/posts/<%= @post.id %>/answers/<%=@post.answer_id%>/downvote' class="fa fa-sort-asc vote-down"></a>
  <p> <%=answer.content%></p>
 <%end%>
</div>

<div class='form-answer'>
  <form action="/posts/<%= @post.id %>/answers" method="post">
    Enter answer here... <br/>
    <textarea rows="5" cols="50" name="description"></textarea><br>
    <input class="btn" type="submit" value="submit">
  </form>
</div>

<div class="all-comments">
 <p> "THESE ARE COMMENTS" </p>
  <% @post.comments.each do |comment| %>
 <p> <%=comment.content%></p>
 <%end%>
</div>


<!-- Ryan's work -->

<div class='comment-answer'>
  <form action="/posts/<%= @post.id %>/comments" method="post">
    <textarea rows="1" cols="20" name="description"></textarea><br>
    <input class="btn" type="submit" value="enter comment!">
  </form>
</div>


